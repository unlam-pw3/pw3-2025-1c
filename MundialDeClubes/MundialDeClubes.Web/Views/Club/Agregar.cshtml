@model MundialDeClubes.Entidades.EF.Club
@{
    ViewData["Title"] = "Agregar Club";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Agregar" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" type="text" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pais"></label>
        <input asp-for="Pais" class="form-control" type="text" />
        <span asp-validation-for="Pais" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EscudoUrl"></label>
        <input asp-for="EscudoUrl" class="form-control" type="text" />
        <span asp-validation-for="EscudoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CamisetaUrl"></label>
        <input asp-for="CamisetaUrl" class="form-control" type="text" />
        <span asp-validation-for="CamisetaUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
