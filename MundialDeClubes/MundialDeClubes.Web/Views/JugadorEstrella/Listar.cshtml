@model List<MundialDeClubes.Entidades.EF.JugadorEstrella>
@{
    ViewData["Title"] = "Listar Jugadores Estrella";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Foto</th>
            <th>Descripción</th>
            <th>Club</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model)
        {
            <tr>
                <td>@jugador.IdJugadorEstrella</td>
                <td>@jugador.Nombre</td>
                <td>@jugador.Edad</td>
                <td><img src="@jugador.FotoUrl" alt="Foto de @jugador.Nombre" style="width: 50px; height: auto;" /></td>
                <td>@jugador.Descripcion</td>
                <td>@jugador.IdClubNavigation.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@jugador.IdJugadorEstrella" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@jugador.IdJugadorEstrella" class="btn btn-danger">Eliminar</a></td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Agregar" class="btn btn-primary">Agregar Jugador Estrella</a>

