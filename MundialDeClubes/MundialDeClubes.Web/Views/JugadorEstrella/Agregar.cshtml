@model MundialDeClubes.Entidades.EF.JugadorEstrella
@{
    ViewData["Title"] = "Agregar Jugador Estrella";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Agregar" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FotoUrl"></label>
        <input asp-for="FotoUrl" class="form-control" />
        <span asp-validation-for="FotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Club</label>
        <select asp-for="IdClub" class="form-control" asp-items="ViewBag.Clubs">
            <option value="">Seleccione un club</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
